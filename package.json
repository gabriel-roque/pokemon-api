{
  "name": "pokemon-api",
  "version": "1.0.0",
  "description": "Pokemon API REST",
  "main": "src/server.ts",
  "scripts": {
    "dev": "ts-node-dev --transpileOnly --ignore-watch node_modules src/server.ts",
    "start": "ts-node src/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabriel-roque/pokemon-api.git"
  },
  "keywords": [
    "pokemon",
    "api",
    "rest"
  ],
  "author": "gabriel-roque",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gabriel-roque/pokemon-api/issues"
  },
  "homepage": "https://github.com/gabriel-roque/pokemon-api#readme",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "axios": "^0.19.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.1.0",
    "husky": "^4.2.5",
    "prettier": "2.0.5",
    "ts-node-dev": "^1.0.0-pre.44"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
